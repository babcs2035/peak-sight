{
  "name": "peak-sight",
  "version": "1.0.0",
  "scripts": {
    "prepare": "husky",
    "check": "biome check ./frontend/src",
    "format": "biome format --write ./frontend/src"
  },
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "frontend/src/**/*.{js,ts,jsx,tsx}": [
      "pnpm biome check --no-errors-on-unmatched"
    ]
  }
}
